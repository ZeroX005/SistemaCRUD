@model IEnumerable<SistemaCRUD.ADO.Nacionalidad>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Nacionalidades</h2>

<p>
    @Html.ActionLink("Agregar nacionalidad", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nacionalidad
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre_nacionalidad)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.cod_nacionalidad }) |
            @Html.ActionLink("Detalle", "Details", new { id = item.cod_nacionalidad }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.cod_nacionalidad })
        </td>
    </tr>
}

</table>
