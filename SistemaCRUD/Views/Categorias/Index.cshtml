@model IEnumerable<SistemaCRUD.ADO.Categoria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de categorías</h2>

<p>
    @Html.ActionLink("Agregar categoría", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Categoría
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre_categoria)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.cod_categoria }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.cod_categoria }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.cod_categoria })
        </td>
    </tr>
}

</table>
