@model IEnumerable<SistemaCRUD.ADO.Usuario>

@{
    ViewBag.Title = "Administradores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de usuarios administrador</h2>

<p>
    @Html.ActionLink("Crear nuevo usuario", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Usuario
        </th>
        <th>
            Password
        </th>
        <th>
            Nombres
        </th>
        <th>
            Apellidos
        </th>
        <th>
            DNI
        </th>
        <th>
            Nacionalidad
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.usuario1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apellido_usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nacionalidad.nombre_nacionalidad)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.cod_usuario }) |
                @Html.ActionLink("Detalle", "Details", new { id = item.cod_usuario }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.cod_usuario })
            </td>
        </tr>
    }

</table>
